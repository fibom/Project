    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_myLayoutPage.cshtml";
}
<link rel="stylesheet" href="~/Content/style.css" />
<h2>Index</h2>
<div class="row">
    <header class="header" id="header">
        <nav class="nav container">
            <a href="index.html" class="nav__logo">
                WEB-Library
            </a>

            <div class="nav__menu" id="nav-menu">
                <ul class="nav__list">
                    <li class="nav__item">
                        <a href="index.html" class="nav__link active-link">Главная</a>
                    </li>
                    <li class="nav__item">
                        <a href="#about" class="nav__link">О нас</a>
                    </li>
                    <li class="nav__item">
                        <a href="catalog.html" class="nav__link">Портфолио</a>
                    </li>
                    <li class="nav__item">
                        <a href="#faqs" class="nav__link">Контакты</a>
                    </li>
                    <li class="nav__item">
                        <a href="log.html" class="nav__link">Войти</a>
                    </li>
                </ul>

                <div class="nav__close" id="nav-close">
                    <i class="ri-close-line"></i>
                </div>
            </div>

            <div class="nav__btns">
                <div class="nav__toggle" id="nav-toggle">
                    <i class="ri-menu-line"></i>
                </div>
            </div>
        </nav>
    </header>

    <section class="section-books">
        <div class="first-box">
            <div class="image-box">

            </div>
        </div>

        <div class="second-box">
            <div class="image-box">

            </div>
        </div>

    </section>

    <!--==================== ABOUT ====================-->
    <section class="about section container" id="about">
        <div class="about__container grid">
            <img src="assets/img/about.jpg" alt="" class="about__img">

            <div class="about__data">
                <h2 class="section__title about__title">
                    Кто мы & <br> почему нас выбирают
                </h2>

                <p class="about__description">
                    Мы команда активных специалистов , которые знают толк в организации мероприятий.
                    Наша компания провела уже более 800 мероприятий.
                </p>

                <div class="about__details">
                    <p class="about__details-description">
                        <i class="ri-checkbox-fill about__details-icon"></i>
                        Всегда выполняем работу в заданный срок
                    </p>
                    <p class="about__details-description">
                        <i class="ri-checkbox-fill about__details-icon"></i>
                        Учитываем все предпочтения клиента.
                    </p>
                    <p class="about__details-description">
                        <i class="ri-checkbox-fill about__details-icon"></i>
                        Гарантируем полную безопасность во время мероприятия.
                    </p>
                    <p class="about__details-description">
                        <i class="ri-checkbox-fill about__details-icon"></i>
                        Допускаем возможность оплаты частями
                    </p>
                </div>

                <a href="#" class="button--link button--flex">
                    Узнать больше <i class="ri-arrow-right-down-line button__icon"></i>
                </a>
            </div>
        </div>
    </section>

    <!--==================== STEPS ====================-->
    <section class="steps section container">
        <div class="steps__bg">
            <h2 class="section__title-center steps__title">
                Как получить консультацию <br> прямо сейчас
            </h2>

            <div class="steps__container grid">
                <div class="steps__card">
                    <div class="steps__card-number">01</div>
                    <h3 class="steps__card-title">Выбери мероприятие</h3>
                    <p class="steps__card-description">
                        У нас есть много различных мероприятий , вы можете выбрать одно из них.
                    </p>
                </div>

                <div class="steps__card">
                    <div class="steps__card-number">02</div>
                    <h3 class="steps__card-title">Оставь заявку</h3>
                    <p class="steps__card-description">
                        Вы можете оставить заявку на нашем сайте и мы свяжемся с вами.
                    </p>
                </div>

                <div class="steps__card">
                    <div class="steps__card-number">03</div>
                    <h3 class="steps__card-title">Консультация</h3>
                    <p class="steps__card-description">
                        С Вами свяжется наш оператор для дальнейшего обсуждения.
                    </p>
                </div>
            </div>
        </div>
    </section>

</div>