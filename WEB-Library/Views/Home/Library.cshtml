@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_myLayoutPage.cshtml";
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f2f2f2;
    }

    a {
        text-decoration: none;
        color: blue;
    }

        a:hover {
            text-decoration: underline;
        }

    .read-button {
        display: block;
        width: 40%; /* уменьшаем ширину в два раза */
        padding: 8px 0; /* оставляем отступы сверху и снизу как были */
        margin: 10px auto; /* центрируем кнопку горизонтально и добавляем отступ сверху и снизу */
        background-color: green;
        color: white;
        text-align: center;
        text-decoration: none;
        border-radius: 4px;
    }

        .read-button:hover {
            background-color: darkgreen;
        }
</style>

<section class="book-sale" style="margin-top: 25px;">
    <h3 style="text-align: center; margin-top: 25px;">Library</h3>
    <hr style="width: 10%; margin: 0 auto; margin-bottom: 25px;" />
    <table>
        @foreach (var b in ViewBag.Reads)
        {
            <tr>
                <td>
                    <img src="@Url.Content(b.Image1)" alt="Image1" style="max-width: 100px;" />
                    <a href="@Url.Content(b.Pdf1)" class="read-button" type="application/pdf">Читать</a>
                </td>
                <td>
                    <img src="@Url.Content(b.Image2)" alt="Image2" style="max-width: 100px;" />
                    <a href="@Url.Content(b.Pdf2)" class="read-button" type="application/pdf">Читать</a>
                </td>
                <td>
                    <img src="@Url.Content(b.Image3)" alt="Image3" style="max-width: 100px;" />
                    <a href="@Url.Content(b.Pdf3)" class="read-button" type="application/pdf">Читать</a>
                </td>
            </tr>
        }
    </table>
</section>
