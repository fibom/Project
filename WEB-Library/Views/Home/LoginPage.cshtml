
@{
    ViewBag.Title = "LoginPage";
    Layout = "~/Views/Shared/_myLoginPage.cshtml";
}

<html>

<head>
   
    <link rel="stylesheet"
          href="/Content/loginpage.css">
</head>

<body>
    <div class="main">
        <h1>Web-Library</h1>
        
        <form action="@Url.Action("Login", "Account")" method="post">
            <label for="first">Username:</label>
            <input type="text" id="first" name="first" placeholder="Enter your Username" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Enter your Password" required>

            <div class="wrap">
                <button type="submit">Submit</button>
            </div>
        </form>
        <p>
            Not registered?
            <a href="#"
               style="text-decoration: none;">
                Create an account
            </a>
        </p>
    </div>
</body>

</html>


